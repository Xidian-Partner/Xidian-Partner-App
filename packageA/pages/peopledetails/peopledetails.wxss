/* pages/peopledetails/peopledetails.wxss */
.top{
  display: flex;
  flex-direction: column;
  align-items:center;
  width: 100%;
  justify-content: center;
  background-color: #F3F5F8 ;
}
.one{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9;
  width: 690rpx;
  font-size: 48rpx;
  color: #101010 ;
  font-weight: 600;
  margin-top: 20rpx;
}
.one image{
  border-radius: 50%;
  width: 170rpx;
  height: 170rpx;
  
}
.mid{
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: center;
}
.mid .button1{
  width: 156rpx;
  height: 110rpx;
  background-color: #7565C6;
  border-radius: 30rpx 0 0 30rpx;
  border-right: solid 2rpx #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}
.mid .button2{
  width: 156rpx;
  height: 110rpx;
  background-color: #7565C6;
  border-radius: 0rpx 30rpx 30rpx 0rpx;
  border-left: solid 2rpx #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
}
.button1 image{
  width: 52rpx;
  height: 52rpx;
}
.button2 image{
  width: 52rpx;
  height: 52rpx;
}

.top .text{
  font-size: 30rpx;
  color:#9E9C9D ;
  margin-top: 10rpx;
  margin-bottom: 28rpx;
}
.showImage{
  display: flex;
  justify-items: flex-start;
  width: 632rpx;
  margin-bottom: 60rpx;
  margin-top: 50rpx;
}
.showImage image{
  width: 200rpx;
  height: 200rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
}
.content{
  width: 100%;
  border-radius: 80rpx 80rpx 0 0;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  
  width: 100%;
  display: flex;
  justify-content: flex-start;
  font-size: 40rpx;
  margin-bottom: 22rpx;
}
.chooseItem{
  box-sizing: border-box;
  font-weight:550 ;
  font-size: 36rpx;
  height: 52rpx;
  margin-top: 42rpx;
  color: #9E9C9D;
  height: 62rpx;
  margin-left: 38rpx;
}
.titleHover{
  box-sizing: border-box;
  font-weight:550;
  font-size: 36rpx;
  height: 52rpx;
  margin-top: 42rpx;
  border-bottom: solid 8rpx #a493ff;
  padding: 1rpx;
  color: #7565C6 ;
  height: 62rpx;
  margin-left: 38rpx;
}
.te{
  margin-top: 32rpx;
  font-size: 30rpx;
}