/* pages/publish/publish.wxss */
.bottom{
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  width: 690rpx;
  /* height: 500rpx; */
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  border-radius: 30rpx;
  margin-top: 50rpx;
  background-color: #F3F5F8;
  padding-right: 28rpx;
  margin-bottom: 30rpx;
}
.mid{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 690rpx;
}

.right .button{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #7565C6;
  border-radius: 54rpx;
  width: 130rpx;
  margin-left: 30rpx;
  height: 70rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 550;
}
.top{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
}
.content{
  margin-top: 40rpx;
  box-sizing: border-box;
  width: 690rpx;
  /* height: 564rpx; */
  display: flex;
  flex-direction: column;
  padding-bottom: 50rpx;
  padding-left: 30rpx;
  padding-top: 50rpx;
  background-color: #F3F5F8;
  border-radius: 30rpx;
  padding-right: 28rpx;
}
.content .right{
  display: flex;
  justify-content: flex-end;
}
.content textarea{
  height:200rpx ;
}
.content input{
  width: 100%;
}
.tx{
  color: #767575;
  width: 100rpx;
  height: 40rpx;
}
.line{
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  border-bottom: solid 1rpx #BBBBBB ;
  padding-bottom: 5rpx;
  height: 100rpx;
  align-items: center;
}
picker{
  width: 400rpx;
}
input{
  width:400rpx;
}
.img{
  flex-wrap: wrap;
  display: flex;
  /* justify-content: space-between; */
}
.box{
  text-align: center;
  position: relative;
  width:200rpx;
  height: 200rpx;
  margin-right: 11rpx;
  margin-bottom: 20rpx;
}
image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 0;
  border-radius: 30rpx;
}
.delete{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 150rpx;
  top: 5rpx;
 }